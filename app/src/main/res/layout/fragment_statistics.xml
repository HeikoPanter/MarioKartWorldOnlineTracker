<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    style="@style/Fragment.Mkwot"
    tools:context=".ui.statistics.StatisticsFragment">

    <TextView
        android:id="@+id/text_view_statistics_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/race_statistics"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_marginBottom="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_race_results"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:listitem="@layout/list_item_race_result"/>

    <TextView
        android:id="@+id/text_view_no_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_race_results_yet"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible"/>

</LinearLayout>