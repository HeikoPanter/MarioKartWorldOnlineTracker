<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Fragment.Mkwot"
    tools:context=".ui.statistics.StatisticsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Race results -->
        <include layout="@layout/card_race_statistics"
            android:id="@+id/card_race_statistics"/>

        <!-- Race VS results -->
        <include layout="@layout/card_race_vs_statistics"
            android:id="@+id/card_race_vs_statistics"/>

        <!-- Knockout stats -->
        <include layout="@layout/card_knockout_statistics"
            android:id="@+id/card_knockout_statistics"/>

    </LinearLayout>

</ScrollView>