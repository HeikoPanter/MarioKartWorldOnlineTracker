<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="5">

    <View
        android:id="@+id/topDivider"
        style="@style/Mkwot.HorizontalDivider"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/track_icon_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="4dp"
            android:layout_weight="3"
            android:weightSum="3">

            <ImageView
                android:id="@+id/track_icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                tools:srcCompat="@drawable/mbc1"/>
            <ImageView
                android:id="@+id/track_icon2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                tools:srcCompat="@drawable/route"/>
            <ImageView
                android:id="@+id/track_icon3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                tools:srcCompat="@drawable/mbc1"/>

        </LinearLayout>

        <View
            android:id="@+id/divider1"
            style="@style/Mkwot.VerticalDivider"
            />

        <FrameLayout
            android:id="@+id/position_icon_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingVertical="4dp">

            <ImageView
                android:id="@+id/position_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                tools:srcCompat="@drawable/pos1"/>

        </FrameLayout>

        <View
            android:id="@+id/divider2"
            style="@style/Mkwot.VerticalDivider"
            />

        <TextView
            android:id="@+id/total_amount_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:textAlignment="gravity"
            android:gravity="bottom"
            android:fontFamily="sans-serif"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            tools:text="247"/>

    </LinearLayout>

</LinearLayout>