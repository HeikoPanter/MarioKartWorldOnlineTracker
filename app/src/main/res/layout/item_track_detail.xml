<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/topDivider"
        style="@style/Mkwot.HorizontalDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/track_icon_container"
        />

    <LinearLayout
        android:id="@+id/track_icon_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/divider1"
        app:layout_constraintTop_toBottomOf="@id/topDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingVertical="4dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:id="@+id/track_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            tools:srcCompat="@drawable/mbc1"/>
        <ImageView
            android:id="@+id/track_icon2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            tools:srcCompat="@drawable/route"/>
        <ImageView
            android:id="@+id/track_icon3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            tools:srcCompat="@drawable/mbc1"/>

    </LinearLayout>

    <View
        android:id="@+id/divider1"
        style="@style/Mkwot.VerticalDivider"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/track_icon_container"
        app:layout_constraintBottom_toBottomOf="@id/track_icon_container"
        app:layout_constraintStart_toEndOf="@id/track_icon_container"
        app:layout_constraintEnd_toStartOf="@id/position_icon_container"/>

    <FrameLayout
        android:id="@+id/position_icon_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/divider1"
        app:layout_constraintEnd_toStartOf="@id/divider2"
        app:layout_constraintTop_toTopOf="@id/track_icon_container"
        app:layout_constraintBottom_toBottomOf="@id/track_icon_container"
        android:paddingVertical="4dp">

        <ImageView
            android:id="@+id/position_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            tools:srcCompat="@drawable/pos1"/>

    </FrameLayout>

    <View
        android:id="@+id/divider2"
        style="@style/Mkwot.VerticalDivider"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/track_icon_container"
        app:layout_constraintBottom_toBottomOf="@id/track_icon_container"
        app:layout_constraintStart_toEndOf="@id/position_icon_container"
        app:layout_constraintEnd_toStartOf="@+id/total_amount_textview" />

    <TextView
        android:id="@+id/total_amount_textview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/divider2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/track_icon_container"
        app:layout_constraintBottom_toBottomOf="@id/track_icon_container"
        android:textAlignment="gravity"
        android:gravity="bottom"
        android:fontFamily="sans-serif"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:padding="0dp"
        tools:text="247"/>

</androidx.constraintlayout.widget.ConstraintLayout>