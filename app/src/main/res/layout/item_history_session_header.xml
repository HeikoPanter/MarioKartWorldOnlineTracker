<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="4dp"
    android:background="@color/black_900">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_gravity="center_vertical"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:text="@string/history_header_session"/>

    <TextView
        android:id="@+id/textViewSessionIdHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_gravity="center_vertical"
        android:fontFamily="sans-serif"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        tools:text="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_gravity="center_vertical"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="@string/history_header_separator"/>

    <TextView
        android:id="@+id/textViewSessionDateHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_gravity="center_vertical"
        android:fontFamily="sans-serif"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        tools:text="01.06.2025 15:32"/>

    <TextView
        android:id="@+id/textViewTrackCountHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_gravity="center_vertical"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:text="@string/history_header_tracks"/>

    <TextView
        android:id="@+id/textViewTrackCountHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:fontFamily="sans-serif"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        tools:text="3"/>

    <TextView
        android:id="@+id/textViewTrackSeparator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="5dp"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:text="@string/history_header_separator2"/>

    <TextView
        android:id="@+id/textViewRouteCountHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="3dp"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:text="@string/history_header_routes"/>

    <TextView
        android:id="@+id/textViewRouteCountHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:fontFamily="sans-serif"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        tools:text="11"/>

    <TextView
        android:id="@+id/textViewRallyCountHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="3dp"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:text="@string/history_header_rallies"/>

    <TextView
        android:id="@+id/textViewRallyCountHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:fontFamily="sans-serif"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        tools:text="2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:text="@string/history_header_closing_segment"/>

</LinearLayout>