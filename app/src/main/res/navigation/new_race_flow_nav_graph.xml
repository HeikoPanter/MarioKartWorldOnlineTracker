<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/new_race_flow_nav_graph_id"
    app:startDestination="@+id/selectEngineClassFragment">

    <fragment
        android:id="@+id/selectEngineClassFragment"
        android:name="com.rain.mariokartworldonlinetracker.ui.onlinesession.details.SelectEngineClassFragment"
        android:label="Select Engine Class"
        tools:layout="@layout/fragment_select_engine_class">
        <action
            android:id="@+id/action_selectEngineClassFragment_to_selectDrivingFromFragment"
            app:destination="@id/selectDrivingFromFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />

        <action
            android:id="@+id/action_selectEngineClassFragment_to_selectKnockoutCupFragment"
            app:destination="@id/selectKnockoutCupFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>

    <!-- Knockout Session -->
    <fragment
        android:id="@+id/selectKnockoutCupFragment"
        android:name="com.rain.mariokartworldonlinetracker.ui.onlinesession.details.SelectKnockoutCupFragment"
        android:label="Select Knockout Cup"
        tools:layout="@layout/fragment_select_knockout_cup">
        <action
            android:id="@+id/action_selectKnockoutCupFragment_to_selectPositionFragment"
            app:destination="@id/selectPositionFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>

    <!-- Race Session -->
    <fragment
        android:id="@+id/selectDrivingFromFragment"
        android:name="com.rain.mariokartworldonlinetracker.ui.onlinesession.details.SelectDrivingFromFragment"
        android:label="Select Driving From"
        tools:layout="@layout/fragment_select_driving_from">
        <action
            android:id="@+id/action_selectDrivingFromFragment_to_selectDrivingToFragment"
            app:destination="@id/selectDrivingToFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />

        <action
            android:id="@+id/action_selectDrivingFromFragment_to_selectDrivingFromOtherFragment"
            app:destination="@id/selectDrivingFromOtherFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>

    <fragment
        android:id="@+id/selectDrivingFromOtherFragment"
        android:name="com.rain.mariokartworldonlinetracker.ui.onlinesession.details.SelectDrivingFromOtherFragment"
        android:label="Select Driving From Other"
        tools:layout="@layout/fragment_select_driving_from_other">
        <action
            android:id="@+id/action_selectDrivingFromOtherFragment_to_selectDrivingToFragment"
            app:destination="@id/selectDrivingToFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>

    <fragment
        android:id="@+id/selectDrivingToFragment"
        android:name="com.rain.mariokartworldonlinetracker.ui.onlinesession.details.SelectDrivingToFragment"
        android:label="Select Driving To"
        tools:layout="@layout/fragment_select_driving_to">
        <action
            android:id="@+id/action_selectDrivingToFragment_to_enterPositionFragment"
            app:destination="@id/selectPositionFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>

    <fragment
        android:id="@+id/selectPositionFragment"
        android:name="com.rain.mariokartworldonlinetracker.ui.onlinesession.details.SelectPositionFragment"
        android:label="Enter Position"
        tools:layout="@layout/fragment_select_position">

        <action
            android:id="@+id/action_selectPosition_back_to_selectEngineClass"
            app:destination="@id/selectEngineClassFragment"
            app:popUpTo="@id/selectEngineClassFragment"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>

</navigation>